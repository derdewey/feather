- form_tag :action => url(:login) do 
%p
  %label{ :for => "login" }
    Login
  %br/
  = text_field :name => "login" 
%p
  %label{ :for => "password" }
    Password
  %br/
  = password_field :name => "password" 
%p
  %label{ :for => "remember_me" }
    Remember me:
    = checkbox_field :name => 'remember_me' 
%p
  = submit_button 'Log in' 
- end
