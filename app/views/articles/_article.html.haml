= render_plugin_views @articles.nil? ? "before_article" : "before_article_in_list", :with => article
.hentry{:id => "article-#{@article.id}"}
  %h2#entry-title
    = link_to(article.title, article.permalink) 
  .vcard
    Posted by
    %span.fn
      = article.user.name
  %abbr.published{ :title => "" }
    = article.published_at.strftime("on %b %d, %y") unless article.published_at.nil? 
  %br.clear/
  .entry-content
    = render_article(article) 
  %ul.meta
    %li
      = render_plugin_views "meta_section", :with => article
= render_plugin_views @articles.nil? ? "after_article" : "after_article_in_list", :with => article
= render_plugin_views "between_articles", :with => {:before => article, :after => @articles[@articles.index(article) + 1]} unless @articles.nil? || @articles[@articles.index(article) + 1].nil?