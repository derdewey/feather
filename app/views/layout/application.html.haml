!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
  %title
    = catch_content :title
  %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    - require_css("application") 
    = include_required_css
    = render_plugin_views "head" 
  %body
    #container
      #header
        %h1
          %span
            = link_to(render_title, "/")
        %h2
          = render_tag_line
        = render_plugin_views "header"
      #page
        #content
          = render_plugin_views "before_layout" 
          = catch_content :for_layout
          = render_plugin_views "after_layout" 
        #sidebar
          = render_about_text
          - unless @articles.blank? 
          #archives
            %h3
              Archives
            %ul#archives
              = partial('shared/archive', :with => @archives[0...20]) 
              - if @archives.length > 20 
              %a#view_all_archive_link{ :href => "#", :onclick => "document.getElementById('view_all_archive').style.display = 'inline'; document.getElementById('view_all_archive_link').style.display = 'none';" }
                View all
              %span#view_all_archive{ :style => "display: none;" }
                = partial('shared/archive', :with => @archives[20...@archives.length]) 
              - end
          - end 
          = render_plugin_views "sidebar" 
        %br{ :style => "clear:both;" }/
      #footer
        %hr/
        %p
          = link_to(render_title, "/") 
        %ul
          %li
            powered by 
            = link_to 'feather', 'http://featherblog.org'  
            \/ styled with 
            = link_to 'scribbish', 'http://quotedprintable.com/pages/scribbish' 
            = render_plugin_views "footer" 
